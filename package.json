    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.17",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
